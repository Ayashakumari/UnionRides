<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/White"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_camera"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />

    <RelativeLayout
        android:id="@+id/fanslayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/header_fan"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_fans" />

        <TextView
            android:id="@+id/follwingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:background="@drawable/item_count"
            android:gravity="center"
            android:text="3"
            android:textColor="#FFF"
            android:textSize="8sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtrides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/header_camera"
        android:text="Rides"
        android:textColor="@color/Black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/header_video"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/header_camera"
        android:src="@drawable/header_video" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/header_camera"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/header_logo"
            android:layout_width="25dp"
            android:layout_height="30dp"

            android:src="@drawable/list" />

        <ImageView
            android:id="@+id/header_setting"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/header_logo"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_setting"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/header_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Header"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/header_event"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/header_event" />

</RelativeLayout>