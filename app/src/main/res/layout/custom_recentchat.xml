<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/chatlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:elevation="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/chat_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp">

            <!--  <unionrides.com.unionrides.Activity.RoundedImageView
                  android:id="@+id/chat_img"
                  android:layout_width="65dp"
                  android:layout_height="65dp"
                  android:layout_gravity="center"
                  android:scaleType="fitXY"
                  android:src="@drawable/default_user" />-->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chat_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/loadinguni"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/chat_img"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chat_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/day_txt"
                    android:text="Michael"
                    android:textColor="@color/Black"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/message_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/day_txt"

                    android:maxLines="2"
                    android:text=" Lorem Ipsum is simply dummy text..."
                    android:textColor="@color/gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/day_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:text="Friday"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_chatcount"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/day_txt"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:padding="5dp"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="10sp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/chat_relative"
            android:background="#D0D0D0" />

    </RelativeLayout>
