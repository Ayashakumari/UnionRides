<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/verify_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:background="@drawable/bg"


        >

        <LinearLayout
            android:id="@+id/verify_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <EditText
                android:id="@+id/verify_code1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/shape_white_nopadding"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/White"
                android:textColorHint="@color/White"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/verify_code2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"

                android:background="@drawable/shape_white_nopadding"
                android:gravity="center"

                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/White"
                android:textColorHint="@color/White"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/verify_code3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_white_nopadding"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/White"
                android:textColorHint="@color/White"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/verify_code4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_white_nopadding"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/White"
                android:textColorHint="@color/White"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/digit_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verify_linear"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="Enter 4 digit verification code"
            android:textColor="@color/White" />


        <TextView
            android:id="@+id/verify_txt"
            android:layout_width="match_parent"


            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/verify_linear"
            android:layout_alignEnd="@+id/verify_linear"
            android:layout_alignLeft="@+id/verify_linear"
            android:layout_alignRight="@+id/verify_linear"
            android:layout_alignStart="@+id/verify_linear"
            android:layout_below="@+id/digit_txt"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_white"
            android:gravity="center"
            android:text="Verify"
            android:textColor="#000000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/verify_linear"
            android:layout_alignLeft="@+id/verify_linear"
            android:layout_alignRight="@+id/verify_linear"
            android:layout_alignStart="@+id/verify_linear"
            android:layout_below="@+id/verify_txt"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/get_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/verify_txt"
                android:text="Didn't get Code?"
                android:textColor="@color/White"


                android:textSize="16sp" />

            <TextView
                android:id="@+id/resend_now_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/verify_linear"
                android:layout_below="@+id/verify_txt"
                android:layout_toRightOf="@+id/get_txt"
                android:paddingLeft="2dp"
                android:text="Resend Now!"
                android:textColor="@color/White"


                android:textSize="16sp" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>